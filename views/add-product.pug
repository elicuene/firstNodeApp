doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
    body 
        header.main-header
            nav.main-header_nav 
                ul.main-header_ul 
                    li.main-header_item
                        a(href="/shop") Shop
                    li.main-header_item
                        a.active(href="/admin/add-product") Add Product

    main
        form.form(action="/admin/add-product", method="POST")
            .form-control   
                label(for="title") Item 
                input(type="text", name="title", id="title")
            button.btn(type="submit") Add Product
            
    